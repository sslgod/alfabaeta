<%- model_class = @site.class -%>
<div class="page-header">
  <h1><%= @site.name %></h1>
</div>

<div class='container'>
  <div class='span6'>
         <% if user_signed_in? %>
    <% if current_user.has_role? :admin %>

  <%= link_to t('.back', :default => t("helpers.links.back")),
              sites_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_site_path(@site), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              site_path(@site),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
              
<hr>
<%end%>
    <%end%>
    <img src='<%= @site.image%>' alt='<%= @site.name%>'>
  
    <br><br>
    <div class='row'>
      <div class='span3'>
        <h3>Бюджет: <%= @site.price %> рублей</h3>
      </div>
      <div class ='span3'>
        <h3><%= @resdate%></h3> до завершения тестирования
      </div>
    </div>

    
  </div>
  <div class='span4'>
    <h2>Описание</h2>
    <p><%= @site.about %></p><hr>
    <button class="btn btn-large btn-success">Отправить отчет</button>
  </div>
  
</div>
